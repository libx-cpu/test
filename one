#汉诺塔过关秘籍

print('    汉诺塔过关秘籍')

#定义函数
def hanoi(n,x,y,z):
    if n == 1:
        print(x + ' --> ' + z) #将前这个盘子从x移动到z
    else:
        hanoi(n-1,x,z,y)        #将前n-1个盘子从x移动到y
        print(x + ' --> ' + z) #将前最下面的盘子从x移动到z
        hanoi(n-1,y,x,z)        #将前n-1个盘子从y移动到z
n = int(input('请输入汉诺塔的层数：'))

#下面调用函数
hanoi(n,'x','y','z')
